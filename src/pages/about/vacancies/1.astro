---
import Headline from "@components/about/Headline.astro";
import Tagline from "@components/about/Tagline.astro";
import Vacancies from "@layouts/about/Vacancies.astro";
import QuizPopup from "@components/about/QuizPopup.astro";
---

<Vacancies>
  <!-- Main content -->
  <main class="w-full mt-[55px] px-4 lg:px-[75px]">
    <Headline
      defaultStyles={false}
      class="leading-[clamp(3.325rem,1.161rem+7.321vw,7.75rem)] mt-[70px] text-white text-center"
    >
      <p>Are you worthy enough</p>
      <p>to be part of our</p>
      <p>passionate & whacky</p>
      <p>team?</p>
    </Headline>

    <Tagline class="mx-auto text-center mt-8">
      Let's take a small quiz to understand which role you can play in The Alter
      Office for success!
    </Tagline>

    <button
      id="takeQuizBtn"
      class="px-[60px] py-[30px] bg-[#000000] text-[#ffffff] font-HamonBold text-[26px] leading-[26px] sm:text-[30px] sm:leading-[30px] cursor-pointer relative left-[50%] translate-x-[-50%] mt-8"
    >
      <p class="relative top-[2px]">Let's Take Quiz!</p>
    </button>
  </main>

  <!-- Take Quiz confirmation popup -->
  <QuizPopup />
</Vacancies>
