---
import Tagline from "@components/about/Tagline.astro";
import Vacancies from "@layouts/about/Vacancies.astro";

const items = [
  "Coding",
  "Testing",
  "Art/3D",
  "Marketing",
  "Management",
  "Data Analysis",
];
---

<Vacancies>
  <main class="w-full mt-[100px] px-6 sm:px-[27px] md:px-[43px] lg:px-[80px]">
    <div
      class="font-HamonBold text-[clamp(3.5rem,2.786rem+3.571vw,6rem)] leading-[clamp(3rem,2.446rem+2.768vw,4.938rem)] text-white"
    >
      <p>What is that you're really into</p>
      <p>but not what you just studied</p>
      <p>in college.</p>
    </div>

    <Tagline class="mt-8">
      We mean which department is your expertise.
    </Tagline>

    <div class="overflow-hidden w-full absolute bottom-0 left-0">
      <div class="flex gap-6 w-max carousel-track">
        {
          items.concat(items).map((item) => (
            <a
              href="/about/vacancies/3"
              class="h-[502px] w-[405px] bg-[#ffffff] text-[#E51A22] font-HamonBold text-[94px] leading-[80px] relative px-7 break-all cursor-pointer"
            >
              <p class="absolute bottom-[24px]">{item}</p>
            </a>
          ))
        }
      </div>
    </div>
  </main>

  <style>
    @keyframes scroll {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-50%);
      }
    }

    .carousel-track {
      animation: scroll 15s linear infinite;
    }

    .carousel-track:hover {
      animation-play-state: paused;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const track = document.querySelector(".carousel-track") as HTMLElement;

      track?.addEventListener("mouseenter", () => {
        track.style.animationPlayState = "paused";
      });

      track?.addEventListener("mouseleave", () => {
        track.style.animationPlayState = "running";
      });
    });
  </script>
</Vacancies>
