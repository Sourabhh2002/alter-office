---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout title="Culture">
  <section
    class="bg-[#FFE135] h-[100dvh] px-4 lg:px-[75px] pt-[26px] overflow-hidden"
  >
    <div class="max-w-[3840px] w-full mx-auto">
      <!-- Alter office logo -->
      <Image
        src="/images/misc/tao_logo_blue.png"
        alt="Alter_Office_Logo"
        width={212}
        height={72}
        loading="eager"
      />
    </div>

    <!-- Main content -->
    <main class="max-w-[3840px] w-full mx-auto mt-[55px]">
      <p class="font-HamonLight text-[68px]">We believe</p>
      <div class="flex gap-24 mt-4">
        <div class="font-HamonBold text-[150px] leading-[130px]">
          <p>Productivity</p>
          <p>comes when</p>
          <p>you are</p>
          <p>taken care.</p>
        </div>
        <div
          class="w-[732px] text-[26px] leading-[30px] opacity-90 font-HamonBold relative top-4"
        >
          Great work starts with feeling great. From medical insurance for your
          entire family to daily lunch and unlimited refreshments, we ensure
          you're healthy, happy, and ready to create your best work.
        </div>
      </div>
    </main>
  </section>

  <style>
    @media (max-height: 550px) {
      section {
        height: auto !important;
        min-height: 550px;
        overflow-y: auto !important;
      }
    }
  </style>
</Layout>
